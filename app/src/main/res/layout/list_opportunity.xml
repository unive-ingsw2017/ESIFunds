<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutListOpportunity"
    android:layout_width="match_parent"
    android:layout_height="@dimen/materialize_listitem"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dimen_8dp">

    <ImageView
        android:id="@+id/imageViewOpportunityAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp" />

    <LinearLayout
        android:id="@+id/linearLayoutListOpportunityInternal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/imageViewOpportunityAvatar"
        android:layout_toStartOf="@id/imageButtonOpportunityIcon"
        android:orientation="vertical" android:weightSum="1">

        <TextView
            android:id="@+id/textViewOpportunityPrimary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:fontFamily="@font/roboto_regular"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewOpportunitySecondary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:minLines="2"
            android:singleLine="false"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonOpportunityIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@null"
        android:src="@drawable/ic_star_border_black_24dp"
        android:visibility="invisible" />

    <View
        android:id="@+id/viewOpportunityDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blue_grey_100" />

</RelativeLayout>