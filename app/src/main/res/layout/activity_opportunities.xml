<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutOpportunitiesActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_100"
    android:focusableInTouchMode="true"
    tools:context="com.esifunds.activity.OpportunitiesActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarOpportunitiesActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@android:color/white" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/textInputEditTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="@dimen/dimen_64dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:gravity="center_vertical"
        android:hint="@string/string_search"
        android:inputType="text"
        android:singleLine="true"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imageButtonOpportunitiesActivitySearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_search_white_24dp" />

    <FrameLayout
        android:id="@+id/fragmentPlaceholderOpportunitiesActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarOpportunitiesActivity"
        android:background="@color/md_grey_100">

    </FrameLayout>

    <ImageButton
        android:id="@+id/imageButtonFullSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp" />
</RelativeLayout>
